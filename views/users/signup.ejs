<% layout('layout/boilerplate') %>


<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Sign Up</h3>
            <form class="needs-validation" novalidate method="POST" action="/signup">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="user[username]" id="username" required class="form-control" type="text" />
                </div>
            
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="user[email]" id="email" required class="form-control" type="text" />
                </div>
            
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="user[password]" id="password" required class="form-control" type="password" />
                </div>
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>
</body>