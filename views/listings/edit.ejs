<% layout('layout/boilerplate') %>
<body>
  <div class="row mt-3">
      <h3>Edit your Listing</h3>
      <form class="needs-validation" enctype="multipart/form-data" novalidate method="POST" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" required class="form-control" value="<%=listing.title%>" 
          type="text" />
        </div>
    
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea required class="form-control" name="listing[description]">
            <%= listing.description%></textarea
          >
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
          />
        </div>
        
        <div class="row">
          <div class="mb-3 col-md-4" >
            <label for="price" class="form-label">Price</label>
            <input required name="listing[price]" class="form-control" value="<%=listing.price%>"
            type="number" />
          </div>
          
          <div class="mb-3 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input required name="listing[country]" class="form-control" value="<%=listing.country%>" type="text" />
          </div>
      
        </div>
        
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
          required
          name="listing[location]" class="form-control"
          value="<%=listing.location%>"
          type="text"
          />
        </div>
        
        <button class="btn btn-dark editbtn mb-3">Save</button>
      </form>
    </div>
  </div>
  
</body>
